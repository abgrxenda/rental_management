<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Serial Selection Wizard Form -->
    <record id="view_serial_selection_wizard_form" model="ir.ui.view">
        <field name="name">serial.selection.wizard.form</field>
        <field name="model">serial.selection.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Serial Numbers">
                <sheet>
                    <div class="alert alert-info" role="alert">
                        <h4>
                            <i class="fa fa-info-circle"/> Select Serial Numbers
                        </h4>
                        <p>
                            Choose which specific serial numbers to assign to this rental item.
                        </p>
                    </div>
                    
                    <group>
                        <group>
                            <field name="equipment_id" readonly="1"/>
                            <field name="quantity_needed" readonly="1"/>
                            <field name="selected_count" readonly="1"/>
                        </group>
                        <group>
                            <button name="action_auto_assign" 
                                    string="Auto-Assign Available" 
                                    type="object" 
                                    class="btn btn-primary"
                                    icon="fa-magic"/>
                        </group>
                    </group>
                    
                    <!-- Warning/Status Message -->
                    <field name="warning_message" 
                           readonly="1" 
                           invisible="not warning_message"
                           class="alert alert-warning mt-3"
                           widget="text"/>
                    
                    <!-- Serial Selection -->
                    <separator string="Select Serial Numbers to Assign"/>
                    <field name="available_serial_ids" 
                           nolabel="1" 
                           widget="many2many"
                           options="{'no_create': True}"
                           domain="[('equipment_id', '=', equipment_id), '|', ('status', '=', 'available'), ('id', 'in', currently_assigned_ids)]">
                        <list create="0" delete="0" edit="0">
                            <field name="serial_number"/>
                            <field name="status" widget="badge"
                                   decoration-success="status == 'available'"
                                   decoration-muted="status != 'available'"/>
                            <field name="programming_config" optional="hide"/>
                        </list>
                    </field>
                    
                    <!-- Currently Assigned (for reference) -->
                    <separator string="Currently Assigned Serials" 
                               invisible="not currently_assigned_ids"/>
                    <field name="currently_assigned_ids" 
                           nolabel="1" 
                           readonly="1"
                           invisible="not currently_assigned_ids">
                        <list create="0" edit="0" delete="0">
                            <field name="serial_number"/>
                            <field name="status" widget="badge"/>
                        </list>
                    </field>
                </sheet>
                
                <footer>
                    <button string="Assign Selected Serials" 
                            name="action_assign_selected" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
</odoo>