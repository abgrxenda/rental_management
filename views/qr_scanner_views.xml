<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- QR Scan Log list View -->
    <record id="view_rental_scan_log_list" model="ir.ui.view">
        <field name="name">rental.scan.log.list</field>
        <field name="model">rental.scan.log</field>
        <field name="arch" type="xml">
            <list string="Scan Logs" default_order="scan_datetime desc">
                <field name="scan_datetime"/>
                <field name="serial_number_id"/>
                <field name="equipment_id"/>
                <field name="scan_type"/>
                <field name="user_id"/>
                <field name="project_id"/>
                <field name="previous_status"/>
                <field name="new_status"/>
            </list>
        </field>
    </record>
    
    <!-- QR Scan Log Form View -->
    <record id="view_rental_scan_log_form" model="ir.ui.view">
        <field name="name">rental.scan.log.form</field>
        <field name="model">rental.scan.log</field>
        <field name="arch" type="xml">
            <form string="Scan Log" create="false" edit="false" delete="false">
                <sheet>
                    <group>
                        <group>
                            <field name="serial_number_id"/>
                            <field name="equipment_id"/>
                            <field name="scan_datetime"/>
                            <field name="scan_type"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="project_id"/>
                            <field name="location"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="previous_status"/>
                            <field name="new_status"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- QR Scan Log Search View -->
    <record id="view_rental_scan_log_search" model="ir.ui.view">
        <field name="name">rental.scan.log.search</field>
        <field name="model">rental.scan.log</field>
        <field name="arch" type="xml">
            <search>
                <field name="serial_number_id"/>
                <field name="equipment_id"/>
                <field name="user_id"/>
                <field name="scan_type"/>
                <field name="project_id"/>
                
                <filter string="Today" name="today"
                        domain="[('scan_datetime', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00'))]"/>
                <filter string="This Week" name="this_week"
                        domain="[('scan_datetime', '&gt;=', (context_today() - relativedelta(weeks=1)).strftime('%Y-%m-%d 00:00:00'))]"/>
                <filter string="This Month" name="this_month"
                        domain="[('scan_datetime', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-%d 00:00:00'))]"/>
                
                <separator/>
                <filter string="Add to Project" name="add_to_project"
                        domain="[('scan_type', '=', 'add_to_project')]"/>
                <filter string="Handover" name="handover"
                        domain="[('scan_type', '=', 'handover')]"/>
                <filter string="Return" name="return"
                        domain="[('scan_type', '=', 'return')]"/>
                <filter string="Damaged" name="damaged"
                        domain="[('scan_type', '=', 'damaged')]"/>
                <filter string="Repair" name="repair"
                        domain="[('scan_type', '=', 'repair')]"/>
                
                <group expand="0" string="Group By">
                    <filter name="group_scan_type" string="Scan Type" 
                            context="{'group_by': 'scan_type'}"/>
                    <filter name="group_user" string="User" 
                            context="{'group_by': 'user_id'}"/>
                    <filter name="group_item" string="Item" 
                            context="{'group_by': 'equipment_id'}"/>
                    <filter name="group_date" string="Date" 
                            context="{'group_by': 'scan_datetime:day'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- QR Scan Log Action -->
    <record id="action_rental_scan_log" model="ir.actions.act_window">
        <field name="name">Scan Logs</field>
        <field name="res_model">rental.scan.log</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_this_week': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No scan logs found
            </p>
            <p>
                Scan logs are automatically created when staff scan QR codes
            </p>
        </field>
    </record>
    
